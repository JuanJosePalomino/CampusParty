@{
    Layout = "_AdminMenuLayout";
    ViewData ["Title"] = "Usuarios";
    IEnumerable<Usuario> usuarios = Model;
}
@section Scripts {
    <script src="~/js/admin/usuarios.js"></script>
}

<div class="container">

    <h2>Usuarios</h2>
    <div class="row">
        <div class="col-md-12 p-2">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Documento</th>
                        <th scope="col">Telefono</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Usuario usuario in usuarios) {
                        <tr>
                            <th scope="row">@usuario.NombreCompleto</th>
                            <td>@usuario.Correo</td>
                            <td>@usuario.Documento</td>
                            <td>@usuario.Telefono</td>
                            <td colspan="2" class="align-middle">
                                <div class="d-flex justify-content-center h-100" style="gap:10px;">
                                    <button type="button" class="btn btn-danger btn-sm delete-usuario" data-bs-toggle="modal" data-bs-target="#dangerModal" data-itemid="@usuario.UsuarioId">Eliminar Usuario</button>
                                    <div class="dropdown m-1">
                                        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown">
                                            <i class='bx bxs-brightness'></i> Más Acciones
                                        </button>
                                        <ul class="dropdown-menu text-small shadow">
                                            <li><a class="dropdown-item" href="@Url.Action("UserDetails", "Users", new {idUsuario = usuario.UsuarioId})">Mas Información</a></li>
                                            @*<li><a class="dropdown-item" href="@Url.Action("TeamsByUser", "Users")">Equipos Gamer</a></li>*@
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<div class="modal fade" id="dangerModal" tabindex="-1" aria-labelledby="dangerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dangerModalLabel">Eliminación elemento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿ Estás seguro que deseas eliminar este elemento ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteAction">Confirmar</button>
            </div>
        </div>
    </div>
</div>
