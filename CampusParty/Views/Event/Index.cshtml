@{
    Layout = "_AdminMenuLayout";
    ViewData ["Title"] = "Eventos";
    IEnumerable<Evento> eventos = Model;
}

@section Scripts {
    <script src="~/js/admin/eventos.js"></script>
}

<div class="container">
          
    <h2>Administrar Eventos</h2>
    <div class="top-table-container mt2">
    <a class="btn btn-primary" href="@Url.Action("NewEvent", "Event")">Crear Evento</a>
    </div>

    <div class="row">
    <div class="col-md-12 p-2">
        <table class="table table-sm">
            <thead>
                <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Temas</th>
                <th scope="col">Ubicacion</th>
                <th scope="col">Inicio</th>
                <th scope="col">Fin</th>
                <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Evento evento in eventos){
                    <tr>
                        <th scope="col">@evento.Nombre</th>
                        <td scope="col">@evento.Descripcion</td>
                        <td scope="col">@evento.Temas</td>
                        <td scope="col">Colombia</td>
                        <td scope="col">@evento.FechaInicio</td>
                        <td scope="col">@evento.FechaFin</td>
                        <td colspan="2" class="align-middle">
                            <div class="d-flex justify-content-center h-100">
                            <a class="btn btn-info btn-sm m-1" href="@Url.Action("EventEditor", "Event", new {idEvento = evento.EventoId})">Editar</a>
                            <button type="button" class="btn btn-danger btn-sm m-1 delete-event" data-bs-toggle="modal" data-bs-target="#dangerModal" data-itemid="@evento.EventoId">Eliminar</button>
                            <div class="dropdown m-1">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown">
                                <i class='bx bxs-brightness'></i> Más Acciones
                                </button>
                                <ul class="dropdown-menu text-small shadow">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Pabellon", new {idEvento = evento.EventoId})">Gestionar Pabellones</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Team")">Gestionar Equipos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Users", new {idEvento = evento.EventoId})">Ver Usuarios</a></li>
                                </ul>
                            </div>
                            </div>
                        </td>
                    
                    </tr>
                }

            </tbody>
        </table>
    </div>
    </div>
</div>

<div class="modal fade" id="dangerModal" tabindex="-1" aria-labelledby="dangerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dangerModalLabel">Eliminación elemento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿ Estás seguro que deseas eliminar este elemento ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteAction">Confirmar</button>
            </div>
        </div>
    </div>
</div>