@{
    Layout = "_AdminMenuLayout";
    ViewData ["Title"] = "Nuevo Evento";
}

@section Scripts {
    <script src="~/js/admin/eventos.js"></script>
}

@Html.AntiForgeryToken()

<div class="container mt-2">

    <h2 style="text-align:center;">Crear Evento</h2>
    <div class="row justify-content-center">
        <div class="col-8">
            <form id="nuevoEventoForm">
                <div class="mb-3">
                    <label for="nombreEvento" class="form-label">Nombre del evento</label>
                    <input type="text" class="form-control" id="nombreEvento" name="nombreEvento">
                </div>
                <div class="mb-3 d-flex justify-content-between">
                    <div class="col-5">
                        <label for="fechaInicio" class="form-label">Fecha de inicio del evento</label>
                        <input type="date" class="form-control" id="fechaInicio" name="fechaInicio">
                    </div>
                    <div class="col-5">
                        <label for="fechaFin" class="form-label">Fecha de finalización del evento</label>
                        <input type="date" class="form-control" id="fechaFin" name="fechaFin">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="temasEvento" class="form-label">Temas</label>
                    <input type="text" class="form-control" id="temasEvento" name="temasEvento" aria-describedby="temasEventoHelp">
                    <div id="temasEventoHelp" class="form-text">Inserte los diferentes temas que se abordarán durante el evento.</div>
                </div>
                <div class="mb-3">
                    <label for="descEvento" class="form-label">Descripción</label>
                    <textarea class="form-control" id="descEvento" name="descEvento"></textarea>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="estado" name="estado" checked>
                    <label class="form-check-label" for="estado">Disponible</label>
                </div>
                <div class="mb-3 d-flex justify-content-between">
                    <div class="col-3">
                        <label for="pais" class="form-label">Pais</label>
                        <input type="text" class="form-control" id="pais" name="pais">
                    </div>
                    <div class="col-3">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="ciudad" name="ciudad">
                    </div>
                    <div class="col-3">
                        <label for="direccion" class="form-label">Direccion</label>
                        <input type="text" class="form-control" id="direccion" name="direccion">
                    </div>
                </div>

                <button type="button" class="btn btn-primary" id="crearEvento">Crear</button>
            </form>
        </div>
    </div>
</div>


